{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "init": {
      "aliases": [
        "ng-new",
        "new"
      ],
      "description": "Init schematics collection for cliberry-js.",
      "factory": "./init/index#init",
      "schema": "./init/schema.json"
    },
    "base": {
      "factory": "./base/index#base",
      "schema": "./base/schema.json",
      "description": "Generate basic yarn init"
    },
    "install": {
      "factory": "./install/index#install",
      "schema": "./install/schema.json",
      "description": "Install all dependencies and call another installations",
      "aliases": [
        "i"
      ]
    },
    "add": {
      "factory": "./add/index#add",
      "schema": "./add/schema.json",
      "description": "Add selecet package into the repo using yarn.",
      "aliases": [
        "a"
      ]
    },
    "addDev": {
      "factory": "./addDev/index#addDev",
      "schema": "./addDev/schema.json",
      "description": "Add selecet dev package into the repo using yarn.",
      "aliases": [
        "ad"
      ]
    },
    "bin": {
      "factory": "./bin/index#bin",
      "schema": "./bin/schema.json",
      "description": "generate binary execution in the prject",
      "aliases": [
        "b"
      ]
    },
    "idea": {
      "factory": "./idea/index#idea",
      "schema": "./idea/schema.json",
      "description": "generate .idea configuration for js project",
      "aliases": [
        "ic"
      ]
    },
    "editor": {
      "factory": "./editor/index#editor",
      "schema": "./editor/schema.json",
      "description": "generate .editorconfig configuration",
      "aliases": [
        "ec"
      ]
    }
  }
}
