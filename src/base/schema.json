{
  "$schema": "http://json-schema.org/schema",
  "id": "cliberry-schematics#base",
  "title": "cliberry-schematics base Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": "0"
      },
      "alias": "n",
      "description": "name of the project"
    },
    "description": {
      "type": "string",
      "alias": "d",
      "description": "description of the project"
    },
    "author": {
      "type": "string",
      "alias": "a",
      "description": "author of the project (name or company)"
    },
    "email": {
      "type": "string",
      "alias": "e",
      "description": "contact email of the author"
    },
    "repositoryUrl": {
      "type": "string",
      "alias": "r",
      "description": "url of the repository"
    },
    "license": {
      "type": "string",
      "alias": "l",
      "description": "type of the license"
    }
  },
  "required": [
    "name"
  ]
}
