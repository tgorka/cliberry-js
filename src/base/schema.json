{
  "$schema": "http://json-schema.org/schema",
  "id": "cliberry-schematics#base",
  "title": "cliberry-schematics base Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": "0"
      },
      "alias": "n",
      "description": "name of the project"
    },
    "repositoryUrl": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": "1"
      },
      "alias": "r",
      "description": "url of the repository"
    },
    "license": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": "2"
      },
      "alias": "l",
      "description": "type of the license"
    }
  },
  "required": [
    "name",
    "repositoryUrl",
    "license"
  ]
}
